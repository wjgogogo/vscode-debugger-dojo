    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Rust - Debug Tests",
      "cargo": {
        "args": ["test", "--no-run", "--package=rust-demo"],
        "filter": {
          "name": "rust-demo",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}/packages/rust-demo",
      "presentation": {
        "group": "10. Rust",
        "order": 3
      }
    }
  ]
}
