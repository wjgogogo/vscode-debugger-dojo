{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "vite-react: dev",
      "type": "npm",
      "script": "dev",
      "path": "packages/vite-react-demo",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "ready in"
        }
      }
    },
    {
      "label": "kill-vite-react-dev",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "lsof -ti:5173 | xargs kill -9 2>/dev/null || true"],
      "isBackground": false,
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "webpack: serve",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter", "webpack-demo", "serve"],
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "webpack.*compiling",
          "endsPattern": "webpack.*compiled"
        }
      }
    },
    {
      "label": "kill-webpack-serve",
      "type": "shell",
      "command": "lsof -ti:9000 | xargs kill -9 2>/dev/null || true",
      "presentation": {
        "reveal": "never"
      }
    }
  ]
}
